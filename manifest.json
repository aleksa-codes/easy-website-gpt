{
  "manifest_version": 3,
  "name": "Easy WebsiteGPT",
  "version": "1.0.0",
  "description": "Chat with any webpage using OpenAI",
  "permissions": ["activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "index.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
